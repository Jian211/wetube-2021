extends base

block contents
    header
        if errorMessage
            span=errorMessage
        form(method="POST", enctype="multipart/form-data") 
            label(for="video") Video File
            input(required, type="file", name="video", id="video" ,accept="video/*") 
            input(required, placeholder="please write video name" type="text" name="title")
            input(required, placeholder="description" type="text" name="description")
            input(required, placeholder="hashtags," type="text" name="hashtags")
            input(type="submit", value="Upload video")